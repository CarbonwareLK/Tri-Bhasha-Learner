<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="45dip"
	xmlns:android="http://schemas.android.com/apk/res/android"
	
	    android:background="@drawable/custom_group"
	>
	<ImageView android:id="@+id/imgGroup" android:src="@drawable/grp_gre"
		android:layout_height="40dip" android:layout_width="40dip" android:layout_marginLeft="5dip"></ImageView>
	<TextView android:id="@+id/tvGroup" android:layout_width="fill_parent"
		android:layout_height="45dip" android:text="Groups" android:gravity="center_vertical|right"
		android:textSize="20dip"
		android:paddingLeft="5dip" android:paddingRight="5dip"
		android:textColor="#9b0505" android:textStyle="bold"
		></TextView>
</LinearLayout>
